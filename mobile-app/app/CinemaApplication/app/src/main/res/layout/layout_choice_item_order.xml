<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="12dp">

    <ImageView android:id="@+id/icon_choice_item_order"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_info"
        />

    <TextView
        android:id="@+id/tv_choice_item_order_type_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/icon_choice_item_order"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/tv_choice_item_order_price_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/icon_choice_item_order"
        android:layout_marginStart="17dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_choice_item_order_type"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_choice_item_order"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/tv_choice_item_order_price_ticket"
        android:text="VND" />


    <Button android:id="@+id/btn_choice_item_order_remove"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:layout_alignEnd="@+id/tv_choice_item_order_type"
        android:background="@drawable/ic_remove"
        />

    <TextView
        android:id="@+id/edit_text_choice_item_order_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/btn_choice_item_order_remove"
        android:background="@drawable/number_order_ticket"
        android:gravity="center"
        android:text="0"
        android:textSize="18sp" />

    <Button android:id="@+id/btn_choice_item_order_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/edit_text_choice_item_order_number"
        android:background="@drawable/ic_add"/>

</RelativeLayout>