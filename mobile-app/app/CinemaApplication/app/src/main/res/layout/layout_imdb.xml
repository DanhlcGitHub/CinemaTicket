<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/relative_layout_sub_info"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bababa"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_show_imdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9.3"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/icon_star_one_show"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_show_imdb"
            android:layout_marginLeft="8dp"
            android:padding="0dp"
            android:src="@drawable/ic_star_full_1" />

        <ImageView
            android:id="@+id/icon_star_two_show"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_show_imdb"
            android:layout_toEndOf="@+id/icon_star_one_show"
            android:src="@drawable/ic_star_full_1" />

        <ImageView
            android:id="@+id/icon_star_three_show"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_show_imdb"
            android:layout_toEndOf="@+id/icon_star_two_show"
            android:src="@drawable/ic_star_full_1" />

        <ImageView
            android:id="@+id/icon_star_four_show"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_show_imdb"
            android:layout_toEndOf="@+id/icon_star_three_show"
            android:src="@drawable/ic_star_full_1" />

        <ImageView
            android:id="@+id/icon_star_five_show"
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_show_imdb"
            android:layout_toEndOf="@+id/icon_star_four_show"
            android:src="@drawable/ic_star_full_1" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
