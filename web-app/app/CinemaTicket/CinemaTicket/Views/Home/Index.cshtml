        <div class="container">
            <div class="row">
                <div class="col-1" style="margin-top: 30%">
                    <img onclick="FilmManager.previous()" src="Content/img/repository/pre.png" />
                </div>
                <div class="col-10" style="float:left">
                    <div class="row" id="filmContainer">
                        <div ng-repeat="aFilm in FilmData" class="col-3">
