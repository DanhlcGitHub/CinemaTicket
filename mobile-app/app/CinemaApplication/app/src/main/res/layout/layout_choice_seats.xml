<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat"
    android:background="#363636">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_choice_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_choice_seat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_cancel_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_cancel" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_choice_seat_short_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_choice_seat_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv_choice_seat_short_key"
                        android:text=" - "
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_choice_seat_cinema_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv_choice_seat_space"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_choice_seat_full"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_choice_seat_cinema_name"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_cs_please_choice_seat"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar_choice_seat"
        android:gravity="center"
        android:text="Vui lòng chọn ghế"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray" />

    <View
        android:id="@+id/liner_choice_seat_please"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/tv_cs_please_choice_seat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#1378d1" />

    <TextView
        android:id="@+id/tv_cs_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_choice_seat_please"
        android:gravity="center"
        android:text="Màn Hình"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_cs_film_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cs_screen"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_cs_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/liner_order_ticket_two_button"
        android:layout_below="@+id/tv_cs_film_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"></android.support.v7.widget.RecyclerView>

    <!-- list seat info-->
    <LinearLayout
        android:id="@+id/liner_order_ticket_two_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/liner_cs_bottom"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_seat_item"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/text_view_seat"
                android:gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_seat_item"
                android:layout_centerHorizontal="true"
                android:text="Ghế trống"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_seat_item_booking"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/text_choice_seat_selected"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_seat_item_booking"
                android:layout_centerHorizontal="true"
                android:text="Đang chọn"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_seat_item_selected"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/text_choice_seat_booked"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_seat_item_selected"
                android:layout_centerHorizontal="true"
                android:text="Ghế đã đặt"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_seat_item_vip"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/text_view_seat_resell"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_seat_item_vip"
                android:layout_centerHorizontal="true"
                android:text="Ghế Bán Lại"
                android:textSize="12sp" />
        </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/liner_cs_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e2e2e2"
        android:weightSum="10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TIẾP TỤC"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_next" />


    </RelativeLayout>

</RelativeLayout>