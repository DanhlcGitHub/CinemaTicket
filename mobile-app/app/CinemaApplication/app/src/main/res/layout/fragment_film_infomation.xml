<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <ImageView
            android:id="@+id/img_film_information"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:src="@drawable/avengers" />

        <TextView
            android:id="@+id/tv_film_name_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_film_information"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Jurassic World: Fallen Kingdom"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_film_sub_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_film_name_information"
            android:layout_marginTop="10dp"
            android:text="C13 08/06 - 128 phút - 123phim 8.7 - IMDb 7.7" />

        <TextView
            android:id="@+id/tv_film_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_film_sub_info"
            android:layout_marginTop="10dp"
            android:text="Nội dung" />

        <TextView
            android:id="@+id/tv_film_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_film_title_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Tất cả những yếu tố kỳ diệu, phiêu lưu, hồi hợp cùng với một trong những thuognw hiệu nổi tiếng và thành công nhất lịch sử điện ảnh, sự kiện này là một bước chuyển mình về hình ảnh cho thấy sự trở lại của các nhân vật được yêu thích và các loại khủng long đầy cảm hứng và đáng sợ hơn bao giờ hết. Chào mừng đến với Thế Giới Khủng Long Vương Quốc Sụp Đổ." />
    </RelativeLayout>

</ScrollView>