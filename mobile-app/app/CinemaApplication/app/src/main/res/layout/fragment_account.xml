<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_account_logout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Đăng xuất" />

        <ImageView
            android:id="@+id/imv_account_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/businessman" />

        <TextView
            android:id="@+id/tv_account_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_account_user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Nhấn vào hình ảnh để đăng nhập." />

        <TextView
            android:id="@+id/tv_account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_account_user_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_account_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_account_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="" />

    </RelativeLayout>
</RelativeLayout>