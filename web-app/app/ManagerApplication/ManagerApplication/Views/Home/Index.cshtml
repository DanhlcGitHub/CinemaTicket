        label.error {
            display: inline-block;
            color: #8b0000;
        }
        button.ex1 {
            background-color: #FF0000; /* Green */
            border: none;
            width: 100px;
            color: white;
            padding: 10px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }
