<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="488dp">

        <ImageView
            android:id="@+id/img_film_card_lager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient_bg"></FrameLayout>

        <TextView
            android:id="@+id/tv_film_card_lager_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_film_card_lager"
            android:layout_alignParentStart="true"
            android:layout_margin="12dip"
            android:ellipsize="end"
            android:lines="2"
            android:text="Infinity War : Cuộc chiến vô cực"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/tv_film_card_lager_film_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="400dp"
            android:textColor="#ffffffff"
            android:text="Đang Chiếu"
            />

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            card_view:cardCornerRadius="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#bababa"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_card_langer_imdb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9.3"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/icon_star_one_show"
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_card_langer_imdb"
                    android:layout_marginLeft="8dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_star_full_1" />

                <ImageView
                    android:id="@+id/icon_star_two_show"
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_card_langer_imdb"
                    android:layout_toEndOf="@+id/icon_star_one_show"
                    android:src="@drawable/ic_star_full_1" />

                <ImageView
                    android:id="@+id/icon_star_three_show"
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_card_langer_imdb"
                    android:layout_toEndOf="@+id/icon_star_two_show"
                    android:src="@drawable/ic_star_full_1" />

                <ImageView
                    android:id="@+id/icon_star_four_show"
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_card_langer_imdb"
                    android:layout_toEndOf="@+id/icon_star_three_show"
                    android:src="@drawable/ic_star_full_1" />

                <ImageView
                    android:id="@+id/icon_star_five_show"
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_card_langer_imdb"
                    android:layout_toEndOf="@+id/icon_star_four_show"
                    android:src="@drawable/ic_star_full_1" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_film_card_lager_booking_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_film_card_lager_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_view_order_border"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Đặt vé"
            android:textAlignment="center"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
