<!DOCTYPE html>
<html>
<head>
    <title>Viet Cine | Admin</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="~/Content/css/crawl.css" rel="stylesheet" />
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <form action="/" method="post" id="gohomeForm"></form>
    <!-- Site wrapper -->


    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Content/img/repository/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Viet Cine</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/img/repository/logo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">BHD Star</a>
                    </div>
                    <div class="image" style="cursor:pointer" onclick="logout()">
                        <img src="~/Content/img/repository/logout.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview">
                            <span href="" class="nav-link">
                                <span>
                                    <i class="nav-icon fa fa-calendar"></i>
                                    @Html.ActionLink("Manager film", "Index", "Home")
                                </span>
                            </span>
                        </li>

                        <li class="nav-item has-treeview">
                            <span href="" class="nav-link">
                                <span>
                                    <i class="nav-icon fa fa-calendar"></i>
                                    @Html.ActionLink("Manager partner", "ManagerPartnerAccount", "Home")
                                </span>
                            </span>
                        </li>

                        <li class="nav-item has-treeview">
                            <span href="" class="nav-link">
                                <span>
                                    <i class="nav-icon fa fa-calendar"></i>
                                    @Html.ActionLink("Manager group cinema", "ManagerGroupCinema", "Home")
                                </span>
                            </span>
                        </li>

                        <li class="nav-item has-treeview">
                            <span href="" class="nav-link">
                                <span>
                                    <i class="nav-icon fa fa-calendar"></i>
                                    @Html.ActionLink("Crawl film", "Index", "Crawl")
                                </span>
                            </span>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <script src="~/Content/js/jquery-3.3.1.min.js"></script>
        <script src="~/Content/js/jquery-ui.min.js"></script>
        <script src="~/Content/js/common.js"></script>
        <script src="~/Content/js/jquery.validate.min.js"></script>
        <script src="~/Content/js/angular.min.js"></script>
        <script src="~/Content/js/bootstrap.min.js"></script>
        <script src="~/Content/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

        <!-- Main content -->
        <div class="content-wrapper">
            @RenderBody()
            <!-- /.content -->
        </div>
    </div>

    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
</body>
</html>
