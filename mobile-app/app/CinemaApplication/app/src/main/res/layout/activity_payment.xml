<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_activity_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_film_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_cancel_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_cancel" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_order_ticket_short_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Lotte"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_order_ticket_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv_order_ticket_short_key"
                        android:text=" - "
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_order_ticket_cinema_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv_order_ticket_space"
                        android:text="Diamond"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_payment_ticket_full"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_ticket_cinema_name"
                        android:text="Hôm nay - 09:20 - Room 1"
                        android:textSize="12sp" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/appbar_activity_payment"
        android:id="@+id/card_info_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_payment_filmd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em Gái Mưa" />

            <TextView
                android:id="@+id/tv_payment_restricted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_filmd_name"
                android:background="@drawable/text_view_order_border"
                android:layout_marginTop="10dp"

                android:text="C13"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_payment_film_sub_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_payment_filmd_name"
                android:layout_toEndOf="@+id/tv_payment_restricted"
                android:text="102 phút - 2D - Phụ đề" />

            <TextView
                android:id="@+id/tv_payment_film_list_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_restricted"
                android:layout_marginTop="10dp"
                android:text="A1 B2"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/_card_payment_image_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_payment_film_picture"
                    android:layout_width="80dp"
                    android:layout_height="105dp"
                    android:src="@drawable/avengers" />

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view_payment_line_one"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/_card_payment_image_film"
                android:layout_marginTop="10dp"
                android:background="#e5e0e0" />

            <TextView
                android:id="@+id/tv_payment_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_payment_line_one"
                android:layout_marginTop="10dp"
                android:text="Email*" />

            <EditText
                android:id="@+id/edt_payment_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_email"
                android:layout_marginTop="5dp"
                android:text="luulac2008@gmail.com" />

            <TextView
                android:id="@+id/tv_payment_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_payment_email"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại*" />

            <EditText
                android:id="@+id/edt_payment_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_phone"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="01653333505" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_payment_type_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_info_payment"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Thanh toán bằng" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_payment_one"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_payment_type_show"
        android:layout_marginLeft="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_image_payment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_payment_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/news_123phim_ve" />
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/tv_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_image_payment"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="Payyo"
                android:textSize="10sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/liner_order_ticket_two_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/relative_order_ticket_button_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_order_ticker_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="180.000"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/tv_order_ticker_price"
                android:gravity="center|left"
                android:text="VND" />
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#e5e0e0" />

        <RelativeLayout
            android:id="@+id/rl_finish_payment_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#25b408">

            <TextView
                android:id="@+id/tv_next_order_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="TIẾP TỤC"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/icon_next_order_ticket"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/tv_next_order_ticket"
                android:src="@drawable/ic_next" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>