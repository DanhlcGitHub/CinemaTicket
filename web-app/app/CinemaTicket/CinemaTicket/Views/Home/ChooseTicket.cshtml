@{
    ViewBag.Title = "ChooseTicket";
}

<h2>ChooseTicket</h2>
<!DOCTYPE html>
<html ng-app="chooseTicketModule">
<head>
    <meta name="viewport" content="width=device-width">
    <title>Choose Ticket</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/chooseTicket.css">
    <link rel="stylesheet" href="~/Content/css/common.css">


</head>
<body ng-controller="chooseTicketController" style="overflow-y:hidden; overflow-x:hidden;">
    <input id="chooseTicketId" type="hidden" value=@ViewBag.scheduleId />
    <div class="mainMaxWidth2 contentMain">
        <div class="col-sm-5"></div>
        <div class="col-sm-7">
            <nav class="navbar navbar-expand-sm bg-info navbar-dark fixed-top">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">01 CHỌN LOẠI VÉ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">02 CHỌN GHẾ & THANH TOÁN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">03 KẾT QUẢ ĐẶT VÉ</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link"><i class="fa fa-user"></i> Đăng nhập</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        <div id="posterPicture" class="sidenav" style="overflow-y:hidden;">
            <div class="container" style="margin-left: 0; margin-right: 0; padding-left:0; padding-right: 0">
                <div class="transbox">
                    <div class="centered" style="opacity:1.0 !important">
                        <p class="text-white">Hôm nay</p>
                        <p class="text-white"><mark ng-if="data.restricted != 0" class="ex1">C{{data.restricted}}</mark> {{ data.filmName }}</p>
                        <p class="text-white"> {{data.length}} phút - IMDb {{data.imdb}} - {{data.digitalType}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
        </div>
        <div class="col-sm-7">
            <img ng-src="{{data.groupCinemaImg}}" class="ex1 ex2 pull-left">
            <p class="ex2" style="margin-bottom: 0;">{{data.cinemaName}}</p>
            <p style="padding-left: 70px">{{data.date}} - {{data.startTime}}- {{data.roomName}}</p>
            <div class="table-responsive borderless" style="padding-top: 7%">
                <table class="table">
                    <tbody>
                        <tr ng-repeat="seatType in data.typeOfSeats" class="" style="border-top: hidden;">
                            <td style="width: 50%">

                                <h5 style="display:inline;">Vé {{seatType.typeName}}</h5><br><p style="display:inline;">Áp dụng mọi suất chiếu từ Thứ 2 đến Chủ Nhật</p>
                            </td>
                            <td style="width: 20%"><h4 class="text-success">{{seatType.price}}</h4></td>
                            <td style="width: 20%">
                                <button type="button" class="btn btn-default btn-sm" style="margin-right: 9px;">
                                    <span ng-click="clickMinusButton($index)" class="fa fa-minus"></span>
                                </button>
                                <span>{{seatType.userChoose}}</span>
                                <button type="button" class="btn btn-default btn-sm" style="margin-left: 9px;">
                                    <span ng-click="clickPlusButton($index)" class="fa fa-plus"></span>
                                </button>
                            </td>
                            <td style="width: 10%"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p style="padding-bottom: 25%"></p>

        </div>
    </div>
    <footer class="footer">
        <div style=" padding-left:45%;">
            <div class="row">

                <div class="float-right">
                    <div class="card" style="width:31rem; height:95px">
                        <div class="card-body ">
                            <h6>TỔNG TIỀN:<br> <h4 class="text-success">{{totalAmount}}</h4> </h6>
                        </div>
                    </div>
                </div><div class="float-left">
                          <button id="chooseSeatButtonId" type="button" class="btn btn-success btn-xl ">Chọn Ghế</button>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Content/js/angular.min.js"></script>
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/chooseTicket.js"></script>
</body>
</html>