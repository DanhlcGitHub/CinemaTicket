<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c9c9c9">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_finish_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_film_activity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_back_order"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_back_white" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/tv_finish_payment_title_payment_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Thông tin đơn hàng"
                            android:textColor="@android:color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_order_ticket_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_finish_payment_title_payment_type"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_finish_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar_finish_payment"
            android:layout_margin="10dp"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Detail ticket -->
                <RelativeLayout
                    android:id="@+id/rl_finish_payment_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <!-- Film Title -->
                    <TextView
                        android:id="@+id/tv_finish_payment_film_name"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />


                    <!-- Digital type -->
                    <TextView
                        android:id="@+id/tv_finish_payment_digType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_finish_payment_film_name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- cinema group name -->
                    <TextView
                        android:id="@+id/tv_order_detail_groupCinemaName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_finish_payment_digType"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- picture film -->
                    <android.support.v7.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/img_film_fp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/tv_finish_payment_film_name"
                            android:src="@drawable/avengers" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <!-- line between detail ticket and ticket info -->
                <View
                    android:id="@+id/liner_finish_payment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/rl_finish_payment_top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e5e0e0" />


                <!-- line between detail ticket and ticket info -->
                <View
                    android:id="@+id/liner_finish_payment_info"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/liner_finish_payment_detail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e5e0e0" />

                <!-- Date, time, ciname name ticket -->
                <RelativeLayout
                    android:id="@+id/rl_finish_payment_date_time_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/liner_finish_payment_info"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <!-- Date -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_finish_payment_date_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_finish_payment_date_ticket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_finish_payment_date_title"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                        <!--  Time -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tv_finish_payment_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ:"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_finish_payment_time_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_finish_payment_hour"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                        <!-- Cinema -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/tv_finish_payment_cinema_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rạp:"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_fp_cinema_name_middle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_finish_payment_cinema_name"
                                android:layout_marginTop="5dp"
                                android:layout_toEndOf="@+id/tv_fp_space"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- line between date time name and phone email-->
                <View
                    android:id="@+id/liner_finish_payment_date_time_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/rl_finish_payment_date_time_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e5e0e0" />

                <!-- phone number and email -->
                <RelativeLayout
                    android:id="@+id/rl_finish_payment_phone_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/liner_finish_payment_date_time_name"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <!-- phone -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_finish_payment_phone_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số ĐT:"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_finish_payment_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_finish_payment_phone_title"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                        <!--  email -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7">

                            <TextView
                                android:id="@+id/tv_finish_payment_email_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email:"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_finish_payment_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_finish_payment_email_title"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- line between phone email and total -->
                <View
                    android:id="@+id/liner_finish_payment_phone_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/rl_finish_payment_phone_email"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#e5e0e0" />

                <!-- layout total -->
                <RelativeLayout
                    android:id="@+id/rl_finish_payment_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/liner_finish_payment_phone_email"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_finish_payment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_finish_payment_totel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_finish_payment_title"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finish_payment_money_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_finish_payment_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/tv_finish_payment_totel"
                        android:text=" VND"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_title_list_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_finish_payment"
            android:layout_margin="10dp"
            android:text="Danh sách vé"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_ticket_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_list_ticket"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
