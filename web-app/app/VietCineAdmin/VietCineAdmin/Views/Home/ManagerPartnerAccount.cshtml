<div ng-app="homeModule" ng-controller="partnerController">

    <div class="card-header">
        <h3 class="card-title">List Partner Data</h3>
        <button class="btn btn-success float-right btn-group-lg" data-toggle="modal" data-target="#modal-account">Create Partner</button>
    </div>

    <!-- /.box-header -->
    <div class="box-body" style="margin-left:10px; margin-right:20px">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Partner Username</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="account in ListPartnerAccount">
                    <td>{{$index + 1}}</td>
                    <td>{{account.partnerId}}</td>
                    <td>{{account.phone}}</td>
                    <td>{{account.email}}</td>
                    <td>
                        <button type="button" class="btn btn-info" ng-click="clickDetail($index)" data-toggle="modal" data-target="#modal-account-update">Detail</button>
                        <button type="submit" class="btn btn-danger" ng-click="clickDelete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="modal-account">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Account Partner</h4>

                    <button type="button" ng-click="clearForm()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form role="form" id="form-account">
                    <div class="modal-body">
                        <div class="box box-primary">
                            <div class="box-body">

                                <div class="form-group">
                                    <label for="partnerId">Partner username</label>
                                    <input type="text" class="form-control" id="partnerId" name="partnerId" value="">
                                </div>

                                <div class="form-group">
                                    <label for="partnerPassword">Partner Password</label>
                                    <input type="password" class="form-control" id="partnerPassword" name="partnerPassword" value="">
                                </div>

                                <div class="form-group">
                                    <label>Group Cinema</label>
                                    <select class="form-control select2" id="groupCinemaId" name="groupCinemaId" style=" width: 100%;">
                                        <option selected="selected" value="group">----Group Cinema----</option>
                                        <option ng-repeat="group in ListGroupCinema" value="{{group.GroupId}}">{{group.name}}</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <label for="phone">Phone</label>
                                            <input type="text" class="form-control" id="phone" name="phone" value="">
                                        </div>
                                        <div class="col-sm-8">
                                            <label for="email">Email</label>
                                            <input type="email" class="form-control" id="email" name="email" value="">
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- /.box -->

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" ng-click="clearForm()" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="modal-account-update">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Accouunt Modal</h4>
                </div>
                <form role="form" id="form-account-update">
                    <div class="modal-body">
                        <div class="box box-primary">
                            <div class="box-body">

                                <div class="form-group">
                                    <label for="partnerIdUpdate">Partner Id</label>
                                    <input type="text" class="form-control" id="partnerIdUpdate" name="partnerIdUpdate" value="" disabled>
                                </div>

                                <div class="form-group">
                                    <label>Group Cinema</label>
                                    <select class="form-control select2" id="groupCinemaIdUpdate" name="groupCinemaIdUpdate" disabled style=" width: 100%;">
                                        <option selected="selected" value="group">----Group Cinema----</option>
                                        <option ng-repeat="group in ListGroupCinema" value="{{group.GroupId}}">{{group.name}}</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <label for="phoneUpdate">Phone</label>
                                            <input type="tel" class="form-control" id="phoneUpdate" name="phoneUpdate" value="">
                                        </div>
                                        <div class="col-sm-8">
                                            <label for="emailUpdate">Email</label>
                                            <input type="email" class="form-control" id="emailUpdate" name="emailUpdate" value="">
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- /.box -->

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" ng-click="clearFormUpdate()" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="validateModal" role="dialog" style="z-index:20000">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header justify-content-center align-self-center border-bottom-0">
                    <img class="" src="~/Content/img/repository/Post-notification.png" style="width:80px; height: 50px">
                </div>
                <div class="modal-body justify-content-center align-self-center ">
                    <h6 id="modalMessage"></h6>
                </div>
                <div class="modal-footer justify-content-center">
                    <button id="dismissBtn" type="button" class="btn btn-danger" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/partner.js"></script>
