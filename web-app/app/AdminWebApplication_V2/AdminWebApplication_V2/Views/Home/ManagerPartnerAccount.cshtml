<div class="content-wrapper" ng-app="homeModule" ng-controller="partnerController">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">List Partner Account</h3>
                    </div>
                    <div class="col-3">
                        <button type="button" class="btn btn-block btn-info" data-toggle="modal" data-target="#modal-account">Create Partner Account</button>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Partner Id</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="account in ListPartnerAccount">
                                    <td>{{$index + 1}}</td>
                                    <td>{{account.partnerId}}</td>
                                    <td>{{account.phone}}</td>
                                    <td>{{account.email}}</td>
                                    <td>
                                        <button type="button" class="btn btn-info" ng-click="clickDetail($index)" data-toggle="modal" data-target="#modal-account-update">Detail</button>
                                        <button type="button" class="btn btn-danger" ng-click="clickDelete($index)">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>STT</th>
                                    <th>Partner Id</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

    <div class="modal fade" id="modal-account">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Accouunt Modal</h4>
                </div>
                <form role="form">
                    <div class="modal-body">
                        <div class="box box-primary">
                            <div class="box-body">

                                <div class="form-group">
                                    <label for="partnerId">Partner Id</label>
                                    <input type="text" class="form-control" id="partnerId" name="partnerId" value="">
                                </div>

                                <div class="form-group">
                                    <label for="partnerPassword">Partner Password</label>
                                    <input type="password" class="form-control" id="partnerPassword" name="partnerPassword" value="">
                                </div>

                                <div class="form-group">
                                    <label>Group Cinema</label>
                                    <select class="form-control select2" id="groupCinemaId" name="groupCinemaId" style=" width: 100%;">
                                        <option selected="selected" value="group">----Group Cinema----</option>
                                        <option ng-repeat="group in ListGroupCinema" value="{{group.GroupId}}">{{group.name}}</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="phone">Phone</label>
                                    <input type="text" class="form-control" id="phone" name="phone" value="">
                                </div>

                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" value="">
                                </div>

                                
                            </div>
                        </div>
                        <!-- /.box -->

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" ng-click="clearForm()" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" ng-click="createPartner()">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="modal-account-update">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Accouunt Modal</h4>
                </div>
                <form role="form">
                    <div class="modal-body">
                        <div class="box box-primary">
                            <div class="box-body">

                                <div class="form-group">
                                    <label for="partnerIdUpdate">Partner Id</label>
                                    <input type="text" class="form-control" id="partnerIdUpdate" name="partnerIdUpdate" value="" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="partnerPasswordUpdate">Partner Password</label>
                                    <input type="password" class="form-control" id="partnerPasswordUpdate" name="partnerPasswordUpdate" value="">
                                </div>

                                <div class="form-group">
                                    <label>Group Cinema</label>
                                    <select class="form-control select2" id="groupCinemaIdUpdate" name="groupCinemaIdUpdate" style=" width: 100%;">
                                        <option selected="selected" value="group">----Group Cinema----</option>
                                        <option ng-repeat="group in ListGroupCinema" value="{{group.GroupId}}">{{group.name}}</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="phoneUpdate">Phone</label>
                                    <input type="text" class="form-control" id="phoneUpdate" name="phoneUpdate" value="">
                                </div>

                                <div class="form-group">
                                    <label for="emailUpdate">Email</label>
                                    <input type="email" class="form-control" id="emailUpdate" name="emailUpdate" value="">
                                </div>


                                <div class="form-group">
                                    <label>Is Available</label>
                                    <select class="form-control select2" id="availableUpdate" name="availableUpdate" style=" width: 100%;">
                                        <option value="1">Available</option>
                                        <option value="2">Not Available</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- /.box -->

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" ng-click="clearFormUpdate()" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" ng-click="updatePartner()">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>
<script src="~/Content/js/partner.js"></script>
